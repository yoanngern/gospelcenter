        </fieldset>

        <fieldset class="birthday">
            {{ form_label(form.dateOfBirth, "birthday") }}
            {{ form_widget(form.dateOfBirth, {'attr': {'placeholder': 'Birthday'} }) }}
            {{ form_errors(form.dateOfBirth) }}
        </fieldset>

        <fieldset class="location">
