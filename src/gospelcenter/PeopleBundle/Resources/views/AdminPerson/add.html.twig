{% extends "::adminNew.html.twig" %}

{% block classPage %}{{ parent() }} single{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/addImage.min.js') }}"></script>
{% endblock %}

{% block title %}
    {{ parent() }} - Add a contact
{% endblock %}

{% block adminTitle %}<h1>Add a contact</h1>{% endblock %}

{% block adminBack %}
    <a class="back" href="{{ path('gospelcenterAdmin_persons', {'center': center.ref}) }}">Contacts</a>
{% endblock %}

{% block adminBody %}

    <form class="person" action="{{ path('gospelcenterAdmin_persons_add', {'center': center.ref}) }}"
          method="post" {{ form_enctype(form) }}>


    <section class="tab">

        <nav class="sub_nav">
            {% spaceless %}
                <ul>
                    <li><a href="#general" class="current focus">General</a></li>
                    <li><a href="#user">User account</a></li>
                    <li><a href="#notes">Notes</a></li>
                </ul>
            {% endspaceless %}
        </nav>

        <article class="tab active" id="general">

            {{ form_widget(form.gender, {'attr': {'placeholder': 'Gender', 'class':'radio'} }) }}
            {{ form_errors(form.gender) }}

            <fieldset class="double">
                {{ form_widget(form.firstname, {'attr': {'placeholder': 'Firstname'} }) }}
                {{ form_errors(form.firstname) }}

                {{ form_widget(form.lastname, {'attr': {'placeholder': 'Lastname'} }) }}
                {{ form_errors(form.lastname) }}
            </fieldset>

            {{ form_widget(form.image.file) }}
            {{ form_errors(form.image.file) }}

            {{ form_widget(form.privatePhone, {'attr': {'placeholder': 'Private phone'} }) }}
            {{ form_errors(form.privatePhone) }}

            {{ form_widget(form.mobilePhone, {'attr': {'placeholder': 'Mobile phone'} }) }}
            {{ form_errors(form.mobilePhone) }}

            {{ form_widget(form.email, {'attr': {'placeholder': 'Email'} }) }}
            {{ form_errors(form.email) }}

            {{ form_widget(form.dateOfBirth, {'attr': {'placeholder': 'Birthday'} }) }}
            {{ form_errors(form.dateOfBirth) }}

            {{ form_widget(form.location.address1, {'attr': {'placeholder': 'address line 1'} }) }}
            {{ form_errors(form.location.address1) }}

            {{ form_widget(form.location.address2, {'attr': {'placeholder': 'address line 2'} }) }}
            {{ form_errors(form.location.address2) }}

            <fieldset class="double">
                {{ form_widget(form.location.postalCode, {'attr': {'placeholder': 'Postal code', 'class': 'resize'} }) }}
                {{ form_errors(form.location.postalCode) }}

                {{ form_widget(form.location.city, {'attr': {'placeholder': 'City', 'class': 'resize'} }) }}
                {{ form_errors(form.location.city) }}
            </fieldset>

            {{ form_widget(form.location.country, {'attr': {'placeholder': 'Country'} }) }}
            {{ form_errors(form.location.country) }}

            {{ form_widget(form.languages, {'attr': {'class': 'selectMultiple'} }) }}
            {{ form_errors(form.languages) }}

            <fieldset class="inline">
                {{ form_widget(form.abroad, {'attr': {'placeholder': 'is he abroad'} }) }}
                {{ form_errors(form.abroad) }}

                {{ form_widget(form.hasChildren, {'attr': {'placeholder': 'has children'} }) }}
                {{ form_errors(form.hasChildren) }}
            </fieldset>

            {{ form_widget(form.function, {'attr': {'placeholder': 'Function'} }) }}
            {{ form_errors(form.function) }}

            <fieldset class="inline">
                {{ form_widget(form.isSpeaker, {'attr': {'placeholder': 'is speaker'} }) }}
                {{ form_errors(form.isSpeaker) }}

                {{ form_widget(form.isMember, {'attr': {'placeholder': 'is member'} }) }}
                {{ form_errors(form.isMember) }}

                {{ form_widget(form.isVisitor, {'attr': {'placeholder': 'is visitor'} }) }}
                {{ form_errors(form.isVisitor) }}

                {{ form_widget(form.isGlobal, {'attr': {'placeholder': 'is Global'} }) }}
                {{ form_errors(form.isGlobal) }}
            </fieldset>
        </article>

        <article class="tab" id="user">
            {{ form_widget(form.user.username, {'attr': {'placeholder': 'Username'} }) }}
            {{ form_errors(form.user.username) }}

            {{ form_widget(form.user.email, {'attr': {'placeholder': 'Email'} }) }}
            {{ form_errors(form.user.email) }}

            <fieldset class="double">
                {{ form_widget(form.user.plainPassword.first, {'attr': {'placeholder': 'Password'} }) }}
                {{ form_errors(form.user.plainPassword.first) }}

                {{ form_widget(form.user.plainPassword.second, {'attr': {'placeholder': 'Confirmation'} }) }}
                {{ form_errors(form.user.plainPassword.second) }}
            </fieldset>

            {{ form_widget(form.user.units, {'attr': {'class': 'selectMultiple'} }) }}
            {{ form_errors(form.user.units) }}
        </article>

        <article class="tab" id="notes">

            {{ form_widget(form.notes, {'attr': {placeholder: 'Notes'} }) }}
            {{ form_errors(form.notes) }}

            {{ form_rest(form) }}
        </article>
    </section>


