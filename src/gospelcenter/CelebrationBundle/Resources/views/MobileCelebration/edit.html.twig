{% extends "::mobileAdmin.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block headerLeft%}<a id="back" class="left" href="{{ path('gospelcenterAdmin_celebrations', {'center': center.ref}) }}"></a>{% endblock %}
{% block headerCenter %}Edit a celebration{% endblock %}
{% block headerRight %}{% endblock %}

{% block body %}
    
    <form class="celebration" action="{{ path('gospelcenterAdmin_celebrations_edit', {'center': center.ref, 'celebration': celebration.id}) }}" method="post" {{ form_enctype(form) }}>

    	{{ form_errors(form) }}
    	
    	<fieldset class="block">
        	<fieldset class="line">
            	{{ form_label(form.date, "Date") }}
            	{{ form_widget(form.date) }}
        	</fieldset>
            
            <fieldset class="line">
        	    {{ form_label(form.date, "Begin at") }}
        	    {{ form_widget(form.startingTime, {'attr': {'step': '5'} }) }}
            </fieldset>
            
            <fieldset class="line">
        	    {{ form_label(form.date, "Finish at") }}
                {{ form_widget(form.endingTime, {'attr': {'step': '5'} }) }}
            </fieldset>
    	</fieldset>
    	
    	<fieldset class="block">
    	    {{ form_widget(form.existingSpeakers, {'attr': {'placeholder': 'Select speakers'} }) }}
    	</fieldset>
    	
    	<fieldset class="block">
    	    {{ form_widget(form.image.file) }}
    	</fieldset>
    	
    	<fieldset class="block">
    	    {{ form_widget(form.status, {'attr': {'data-icon': 'status'} }) }}
            {{ form_widget(form.bestOf, {'attr': {'data-icon': 'best'} }) }}
            {{ form_widget(form.kidsProgram, {'attr': {'data-icon': 'kids'} }) }}
    	</fieldset>
        
        <fieldset class="block">
            {{ form_widget(form.location, {'attr': {'placeholder': 'Select a location'} }) }}
        </fieldset>
        
        <fieldset class="block">
            <legend>Preaching</legend>        
            {{ form_widget(form.title, {'attr': {'placeholder': 'Title'} }) }}
            {{ form_widget(form.description, {'attr': {'placeholder': 'Description'} }) }}
        </fieldset>
        
        <fieldset class="block">
            <legend>Media</legend>  
            {{ form_widget(form.video.vimeoId, {'attr': {'placeholder': 'Video'} }) }}
            {{ form_widget(form.audio.soundCloudId, {'attr': {'placeholder': 'Audio'} }) }}
        </fieldset>
        
        <fieldset class="block">
            {{ form_widget(form.tags, {'attr': {'placeholder': 'Select tags'} }) }}
        </fieldset>
        
        {{ form_rest(form) }}
        
        <section class="tools">
            <input type="submit" class="buttonRounded" />
        </section>
        
    </form>
    
{% endblock %}