{% extends "gospelcenterUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <h1>Registration</h1>

    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
        
        {{ form_widget(form.username, {'attr': {'placeholder': 'Username'} }) }}
        {{ form_errors(form.username) }}
        
        {{ form_widget(form.email, {'attr': {'placeholder': 'Email'} }) }}
        {{ form_errors(form.email) }}
        
        {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Password'} }) }}
        {{ form_errors(form.plainPassword.first) }}
        
        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Confirmation'} }) }}
        {{ form_errors(form.plainPassword.second) }}
        
        {{ form_widget(form.person.firstname) }}
        
        {{ form_widget(form) }}
        
        <input type="submit" class="buttonRounded" value="Save" />
    </form>
    
{% endblock %}
