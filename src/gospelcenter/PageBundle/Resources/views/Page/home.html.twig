{% set admin = false %}

{% extends "::layoutNew.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ parent() }} {{ center.name }}{% endblock %}

{% block local_header %}
    <div class="gradient_top"></div>
    <div class="map_bg">
        <div class="inner"></div>
    </div>
    <nav class="top">
        <section class="container">
            <a id="get_ruban" href=""></a>
            <section class="right">
                <ul class="nav">
                    <li><a target="_blank"
                           href="{{ path('gospelcenterPageGlobal_home') }}">{{ 'gc.nav.gcmovement'|trans }}</a></li>
                    <li><a target="_blank" href="http://www.ministeres.org">{{ 'gc.nav.apostolicTeam'|trans }}</a></li>
                </ul>
                {% if app.user %}
                    {% include "::admin/param.html.twig" %}
                {% endif %}
            </section>

        </section>
    </nav>
    <section class="center">
        <a class="logo" href="{{ path('gospelcenterPage_home', {'center': center.ref}) }}">
            {% if center.ref == 'lausanne' %}
                <img src="{{ asset('images/visuGCLausanne.png') }}"
                     srcset="{{ asset('images/visuGCLausanne_2x.png') }} 2x">
            {% elseif center.ref == 'montreux' %}
                <img src="{{ asset('images/visuGCMontreux.png') }}"
                     srcset="{{ asset('images/visuGCMontreux_2x.png') }} 2x">
            {% elseif center.ref == 'jura' %}
                <img src="{{ asset('images/visuGCJura.png') }}" srcset="{{ asset('images/visuGCJura_2x.png') }} 2x">
            {% elseif center.ref == 'annecy' %}
                <img src="{{ asset('images/visuGCAnnecy.png') }}" srcset="{{ asset('images/visuGCAnnecy_2x.png') }} 2x">
            {% endif %}
        </a>
    </section>
    <nav class="mobile">
        <ul>
            {% spaceless %}
                {% include "::nav/local.html.twig" %}
            {% endspaceless %}
        </ul>
    </nav>
    <div class="gradient_bottom"></div>
{% endblock %}

{% block header_nav %}
    {% include "::nav/local.html.twig" %}
{% endblock %}

{% block footer %}
    {% include "::footer_local.html.twig" %}
{% endblock %}

{% block body %}

    {% if ads|length %}
        <section class="ads">
            {% spaceless %}

                <div class="container">

                    {% for ad in ads %}

                        <div>
                            <a {% if ad.url|isexternal(ad.url) %}target="_blank"{% endif %} href="{{ ad.url }}">
                                <div
                                        {% if ad.image %}
                                    style="background-image: url('{{ ad.image.webPath| imagine_filter('ads_home_low') }}')"
                                    data-bg="{{ ad.image.webPath| imagine_filter('ads_home') }}"
                                    data-bg_2x="{{ ad.image.webPath| imagine_filter('ads_home_2x') }}"
                                    data-bg_tablet="{{ ad.image.webPath| imagine_filter('ads_home_tablet') }}"
                                    data-bg_tablet_2x="{{ ad.image.webPath| imagine_filter('ads_home_tablet_2x') }}"
                                    data-bg_mobile="{{ ad.image.webPath| imagine_filter('ads_home_mobile') }}"
                                    data-bg_mobile_2x="{{ ad.image.webPath| imagine_filter('ads_home_mobile_2x') }}"
                                        {% endif %}>

                                    <h1>{{ ad.title }}</h1>
                                    <span>{{ ad.subtitle }}</span>
                                </div>
                            </a>
                        </div>

                    {% endfor %}

                </div>

            {% endspaceless %}

        </section>
    {% endif %}


    {% if dates|length %}
        <section id="nextEvents" class="gray">
            <h1>{{ 'gc.page.home.nextEvent'|trans }}</h1>

            <section class="mediaList" data-nb="{{ dates|length + 1 }}">
                {% spaceless %}
                    {% for date in dates %}

                        {% set event = date.event %}

                        <a href="{{ path('gospelcenterEvents_event', {'center': center.ref, 'event': event.id}) }}">
                            <div class="photo"
                                    {% if event.picture %}
                                style="background-image: url('{{ event.picture.webPath| imagine_filter('media_list_low') }}')"
                                data-bg="{{ event.picture.webPath| imagine_filter('media_list') }}"
                                data-bg_2x="{{ event.picture.webPath| imagine_filter('media_list_2x') }}"
                                data-bg_tablet="{{ event.picture.webPath| imagine_filter('media_list_tablet') }}"
                                data-bg_tablet_2x="{{ event.picture.webPath| imagine_filter('media_list_tablet_2x') }}"
                                data-bg_mobile="{{ event.picture.webPath| imagine_filter('media_list_mobile') }}"
                                data-bg_mobile_2x="{{ event.picture.webPath| imagine_filter('media_list_mobile_2x') }}"
                                    {% endif %}>

                                {#<img src="{{ asset(event.picture.webPath) }}" alt="{{ event.title }}"/>#}
                            </div>
                            <section class="details">
                                <h1>{{ event.title }}</h1>
                                <span>{{ date|oneDate(app.request.locale) }}</span>
                            </section>
                        </a>

                    {% endfor %}

                    <a class="more" href="{{ path('gospelcenterEvents_list', {'center': center.ref}) }}">
                        <div class="photo">
                            <span>{{ 'gc.page.home.moreEvents'|trans }}</span>
                        </div>
                    </a>
                {% endspaceless %}
            </section>
        </section>
    {% endif %}

{% endblock %}