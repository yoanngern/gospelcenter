{% extends "::local.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block body %}
        
    <img src="{{ asset('images/logoGCL.png') }}" id="logo" alt="Gospel Center {{ center.name }}" />
    
    <section id="news">
        {% if celebrations|length %}
            {% for celebration in celebrations %}
                <a href="{{ path('gospelcenterCelebrations_list', {'center': center.ref}) }}"><img src="{{ asset(celebration.image.webPath) }}" alt="{{ celebration.image.alt }}" /></a>
            {% endfor %}
        {% endif %}
        
        {% if events|length %}
            {% for event in events %}
                <a href="{{ path('gospelcenterEvents_event', {'center': center.ref, 'event': event.id}) }}"><img src="{{ asset(event.picture.webPath) }}" alt="{{ event.title }}" /></a>
            {% endfor %}
        {% endif %}
    </section>
        
{% endblock %}