{% extends "gospelcenterPageBundle::admin.html.twig" %}

{% block title %}
    {{ parent() }} - Slides
{% endblock %}

{% block adminTitle %}<h1>Slides</h1>{% endblock %}

{% block adminTools %}
    <a href="{{ path('gospelcenterAdmin_slides_add', {'center': center.ref, 'domain': center.domain}) }}" class="add">Add a slide</a>
{% endblock %}

{% block adminListBody %}
    <table class="main">
        <thead>
        <tr>
            <th data-sort="string">Title<span>Title<div class="arrow"></div></span></th>
            <th data-sort="string">Page<span>Page<div class="arrow"></div></span></th>
        </tr>
        </thead>
        <tbody>
        {% for slide in slides %}

            {% set link = path('gospelcenterAdmin_slides_edit', {'slide': slide.id, 'center': center.ref, 'domain': center.domain}) %}

            <tr>
                <td class="em">
                    <a href="{{ link }}">
                        <span>{{ slide.title }}</span>
                    </a>
                </td>
                <td class="em">
                    <a href="{{ link }}">
                        {% if slide.page.title %}
                            <span>{{ slide.page.title }}</span>
                        {% endif %}
                    </a>
                </td>
            </tr>
        {% else %}
            <tr class="empty">
                <td colspan="2">There are no slides.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}