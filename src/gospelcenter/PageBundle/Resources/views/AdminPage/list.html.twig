{% extends "gospelcenterPageBundle::admin.html.twig" %}

{% block title %}
    {{ parent() }} - Pages
{% endblock %}

{% block adminTitle %}<h1>Pages</h1>{% endblock %}

{% block adminTools %}
    <a href="{{ path('gospelcenterAdmin_pages_add', {'center': center.ref, 'domain': center.domain}) }}" class="add">Add a page</a>
{% endblock %}

{% block adminListBody %}
    <table class="main">
        <thead>
        <tr>
            <th data-sort="string">Title<span>Title<div class="arrow"></div></span></th>
            <th data-sort="string">Menu<span>Menu<div class="arrow"></div></span></th>
            <th data-sort="string">Language<span>Language<div class="arrow"></div></span></th>
        </tr>
        </thead>
        <tbody>
        {% for page in pages %}

            {% set link = path('gospelcenterAdmin_pages_edit', {'page': page.id, 'center': center.ref, 'domain': center.domain}) %}

            <tr>
                <td class="em">
                    <a href="{{ link }}">
                        <span>{{ page.title }}</span>
                    </a>
                </td>
                <td>
                    <a href="{{ link }}">
                        <span>{{ page.ref }}</span>
                    </a>
                </td>
                <td>
                    <a href="{{ link }}">
                        <span>{{ page.language.ref }}</span>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr class="empty">
                <td colspan="3">There are no pages.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}