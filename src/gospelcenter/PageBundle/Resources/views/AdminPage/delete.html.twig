{% extends "::admin.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/form.min.js') }}"></script>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/admin.css') }}" type="text/css" />
	<link rel="stylesheet" href="{{ asset('css/form.css') }}" type="text/css" />
{% endblock %}

{% block title %}
    {{ parent() }} - Delete a page
{% endblock %}

{% block adminBody %}
    <h1>Delete a page</h1>
    
    <form class="delete" action="{{ path('gospelcenterAdmin_pages_delete', {'center': center.ref, 'page': objPage.id}) }}" method="post" {{ form_enctype(form) }}>
    	
    	<p>Are you sure you want to delete the page{% if objPage.slides|length %} and slides{% endif %}:</p>
    	<section class="details">
            <h1>{{ objPage.title }}</h1>
            <p>{{ objPage.slogan }}</p>
            
            <h2>Slides</h2>
            {% for slide in objPage.slides %}
                <article class="associations">
                    <h1>{{ slide.title }}</h1>
                    <p>{{ slide.text }}</p>
                </article>
            {% endfor %}
        </section>
        
        <input type="submit" class="buttonRounded" value="Yes" />
        
        <a class="buttonRounded" href="{{ path('gospelcenterAdmin_pages', {'center': center.ref}) }}">No</a>
        
        {{ form_rest(form) }}
        
    </form>
    
    
{% endblock %}