{% extends "::localNew.html.twig" %}

{% block body %}

    {% if folder is defined %}
        
        {% include "@gospelcenterPage/StaticPage/"~ center.ref ~"/"~ language ~"/"~ folder ~".html.twig" %}
        
    {% else %}

        {% include "@gospelcenterPage/StaticPage/"~ center.ref ~"/"~ language ~"/"~ template ~".html.twig" %}
        
    {% endif %}

{% endblock %}

{% set title = 'gc.title.' ~ template %}

{% block meta %}
    {{ parent() }}
    <meta property="og:title" content="{{ title|trans }}"/>
{% endblock %}

{% block title %}{{ parent() }} - {{ title|trans }}{% endblock %}