{% extends "::adminGlobal.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/addPage.min.js') }}"></script>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/admin.css') }}" type="text/css" />
	<link rel="stylesheet" href="{{ asset('css/form.css') }}" type="text/css" />
{% endblock %}

{% block title %}
    {{ parent() }} - Add a page
{% endblock %}

{% block adminBody %}
    <h1>Add a page</h1>
    
    <form class="page" action="{{ path('gospelcenterAdminGlobal_pages_add') }}" method="post" {{ form_enctype(form) }}>
        <nav class="tools">
    		<input type="submit" class="buttonLink" />
    	</nav>
    	
        {{ form_widget(form.ref) }}
        {{ form_errors(form.ref) }}
        
        {{ form_widget(form.title, {'attr': {'placeholder': 'Title'} }) }}
        {{ form_errors(form.title) }}
        
        {{ form_widget(form.slogan, {'attr': {'placeholder': 'Slogan', 'class': 'elastic'} }) }}
        {{ form_errors(form.slogan) }}
        
        {{ form_widget(form.template) }}
        {{ form_errors(form.template) }}
        
        {{ form_widget(form.language) }}
        {{ form_errors(form.language) }}
        
        {{ form_rest(form) }}
    </form>
    
    
{% endblock %}