{% extends "::adminLocalNew.html.twig" %}

{% block classPage %}{{ parent() }} single{% endblock %}

{% block title %}
    {{ parent() }} - Delete a unit
{% endblock %}

{% block adminTitle %}<h1>Delete a unit</h1>{% endblock %}

{% block adminBack %}
    <a class="back" href="{{ path('gospelcenterAdmin_units', {'center': center.ref}) }}">Units</a>
{% endblock %}

{% block adminTools %}
    <a href="{{ path('gospelcenterAdmin_units', {'center': center.ref}) }}">Cancel</a>
{% endblock %}


{% block adminBody %}

    <form class="delete"
          action="{{ path('gospelcenterAdmin_units_delete', {'center': center.ref, 'unit': unit.id}) }}"
          method="post" {{ form_enctype(form) }}>

        <p>Are you sure you want to delete the unit:</p>
        <section class="details">
            <h1>{{ unit.name }}</h1>
        </section>

        <input type="submit" class="buttonLink" value="Yes"/>

        <a class="buttonLink"
           href="{{ path('gospelcenterAdmin_units', {'center': center.ref}) }}">No</a>

        {{ form_rest(form) }}

    </form>

{% endblock %}