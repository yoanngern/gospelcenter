{% extends "gospelcenterAdminBundle::moreGlobal.html.twig" %}

{% block title %}
    {{ parent() }} - Accesses
{% endblock %}

{% block adminTitle %}<h1>Accesses</h1>{% endblock %}

{% block adminTools %}
    <a href="{{ path('gospelcenterAdminGlobal_accesses_add') }}" class="add">Add an access</a>
{% endblock %}

{% block adminListBody %}
    <table class="main">
        <thead>
        <tr>
            <th data-sort="string">Service<span>Service<div class="arrow"></div></span></th>
        </tr>
        </thead>
        <tbody>
        {% for access in accesses %}

            {% set link = path('gospelcenterAdminGlobal_accesses_edit', {'access': access.id}) %}

            <tr>
                <td class="em">
                    <a href="{{ link }}"><span>{{ access.service }}</span></a>
                </td>
            </tr>
        {% else %}
            <tr class="empty">
                <td colspan="1">There are no access.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}