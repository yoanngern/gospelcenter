{% extends "::adminNew.html.twig" %}

{% block classPage %}{{ parent() }} single{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/addImage.min.js') }}"></script>
{% endblock %}

{% block title %}
    {{ parent() }} - Add an image
{% endblock %}

{% block adminTitle %}<h1>Add an image</h1>{% endblock %}

{% block adminBack %}
    <a class="back" href="{{ path('gospelcenterAdmin_images', {'center': center.ref}) }}">Images</a>
{% endblock %}

{% block adminBody %}

    <form class="image" action="{{ path('gospelcenterAdmin_images_add', {'center': center.ref}) }}" method="post" {{ form_enctype(form) }}>

        {{ form_widget(form.file) }}
        {{ form_errors(form.file) }}

        {{ form_widget(form.title, {'attr': {'placeholder': 'Title'} }) }}
        {{ form_errors(form.title) }}

        {{ form_widget(form.type, {'attr': {'placeholder': 'Type'} }) }}
        {{ form_errors(form.type) }}

        {{ form_widget(form.description, {'attr': {'placeholder': 'Description'} }) }}
        {{ form_errors(form.description) }}

        {{ form_rest(form) }}

        <input type="submit" class="buttonLink" value="Add an image"/>

    </form>


{% endblock %}