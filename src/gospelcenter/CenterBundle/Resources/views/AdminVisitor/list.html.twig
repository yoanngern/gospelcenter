{% extends "gospelcenterPeopleBundle::layout.html.twig" %}

{% block adminTitle %}<h1>Visitors</h1>{% endblock %}

{% block adminListBody %}
    <table class="main">
        <thead>
        <tr>
            <th data-sort="string">Firstname<span>Firstname<div class="arrow"></div></span></th>
            <th data-sort="string">Lastname<span>Lastname<div class="arrow"></div></span></th>
            <th data-sort="string">Gender<span>Gender<div class="arrow"></div></span></th>
            <th data-sort="string">Frequency<span>Frequency<div class="arrow"></div></span></th>
        </tr>
        </thead>
        <tbody>
        {% for visitor in visitors %}

            {% set link = path('gospelcenterAdmin_persons_edit', {'person': visitor.person.id, 'center': center.ref, 'domain': center.domain}) %}

            <tr>
                <td class="em">
                    <a href="{{ link }}">
                        <span>{{ visitor.person.firstname }}</span>
                    </a>
                </td>
                <td class="em">
                    <a href="{{ link }}">
                        <span>{{ visitor.person.lastname }}</span>
                    </a>
                </td>
                <td>
                    <a href="{{ link }}">
                        <span>{{ visitor.person.Gender }}</span>
                    </a>
                </td>
                <td>
                    <a href="{{ link }}">
                        <span>{{ visitor.frequency }}</span>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr class="empty">
                <td colspan="4">There are no visitors.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}