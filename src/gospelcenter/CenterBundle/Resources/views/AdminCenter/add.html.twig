{% extends "::adminGlobalNew.html.twig" %}

{% block classPage %}{{ parent() }} single{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/addImage.min.js') }}"></script>
{% endblock %}


{% block title %}
    {{ parent() }} - Add a center
{% endblock %}

{% block adminTitle %}<h1>Add a center</h1>{% endblock %}

{% block adminBack %}
    <a class="back" href="{{ path('gospelcenterAdminGlobal_centers') }}">Centers</a>
{% endblock %}

{% block adminBody %}

    <form class="center" action="{{ path('gospelcenterAdminGlobal_centers_add') }}" method="post" {{ form_enctype(form) }}>

        {{ form_widget(form.ref) }}
        {{ form_errors(form.ref) }}

        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}

        {{ form_widget(form.image.file) }}
        {{ form_errors(form.image.file) }}

        {{ form_widget(form.location) }}
        {{ form_errors(form.location) }}

        {{ form_rest(form) }}

        <input type="submit" class="buttonLink" value="Add a center"/>
    </form>

{% endblock %}