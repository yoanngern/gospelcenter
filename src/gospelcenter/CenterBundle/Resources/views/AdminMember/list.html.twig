{% extends "gospelcenterPeopleBundle::layout.html.twig" %}

{% block adminTitle %}<h1>Members</h1>{% endblock %}

{% block adminListBody %}
    <table class="main">
        <thead>
        <tr>
            <th data-sort="string">Firstname<span>Firstname<div class="arrow"></div></span></th>
            <th data-sort="string">Lastname<span>Lastname<div class="arrow"></div></span></th>
            <th data-sort="string">Gender<span>Gender<div class="arrow"></div></span></th>
            <th data-sort="int">Member from<span>Member from<div class="arrow"></div></span></th>
        </tr>
        </thead>
        <tbody>
        {% for member in members %}

            {% set link = path('gospelcenterAdmin_persons_edit', {'person': member.person.id, 'center': center.ref, 'domain': center.domain}) %}

            <tr>
                <td class="em">
                    <a href="{{ link }}">
                        <span>{{ member.person.firstname }}</span>
                    </a>
                </td>
                <td class="em">
                    <a href="{{ link }}">
                        <span>{{ member.person.lastname }}</span>
                    </a>
                </td>
                <td>
                    <a href="{{ link }}">
                        <span>{{ member.person.gender }}</span>
                    </a>
                </td>
                <td data-sort-default="{{ member.memberFromDate|date('U') }}">
                    <a href="{{ link }}">
                        <span>{{ member.memberFromDate|date('d F Y') }}</span>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr class="empty">
                <td colspan="4">There are no members.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}