{% extends "gospelcenterPeopleBundle::layout.html.twig" %}

{% block gospelcenterAdminPeople_body %}
    <table class="main">
        <thead>
            <tr>
                <th data-sort="string">Firstname</th>
                <th data-sort="string">Lastname</th>
                <th data-sort="string">Gender</th>
                <th data-sort="int">Member from</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
                <tr>
                    <td><a href="{{ path('gospelcenterAdmin_persons_edit', {'person': member.person.id, 'center': center.ref}) }}">{{ member.person.firstname }}</a></td>
                    <td><a href="{{ path('gospelcenterAdmin_persons_edit', {'person': member.person.id, 'center': center.ref}) }}">{{ member.person.lastname }}</a></td>
                    <td><a href="{{ path('gospelcenterAdmin_persons_edit', {'person': member.person.id, 'center': center.ref}) }}">{{ member.person.gender }}</a></td>
                    <td data-sort-default="{{ member.memberFromDate|date('U') }}"><a href="{{ path('gospelcenterAdmin_persons_edit', {'person': member.person.id, 'center': center.ref}) }}">{{ member.memberFromDate|date('d F Y') }}</a></td>
                </tr>
            {% else %}
                <tr><td colspan="4">There are no members.</td></tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}