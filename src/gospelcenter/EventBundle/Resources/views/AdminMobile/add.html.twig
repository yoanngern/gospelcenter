{% extends "::mobileAdmin.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block headerLeft%}<a id="back" class="left" href="{{ path('gospelcenterAdmin_events', {'center': center.ref}) }}"></a>{% endblock %}
{% block headerCenter %}Add an event{% endblock %}
{% block headerRight %}{% endblock %}

{% block body %}
    
    <form class="celebration" action="{{ path('gospelcenterAdmin_events_add', {'center': center.ref}) }}" method="post" {{ form_enctype(form) }}>

    	{{ form_errors(form) }}
    	
    	<fieldset class="block">
    	    {{ form_widget(form.title, {'attr': {'placeholder': 'Title'} }) }}
    	</fieldset>
    	
    	<fieldset class="block">
    	    {{ form_widget(form.status, {'attr': {'data-icon': 'status'} }) }}
    	</fieldset>
    	
    	<fieldset class="block">
        	<fieldset class="line">
            	{{ form_label(form.startingDate, "Starting date") }}
            	{{ form_widget(form.startingDate) }}
        	</fieldset>
            
            <fieldset class="line">
        	    {{ form_label(form.endingDate, "Ending date") }}
        	    {{ form_widget(form.endingDate) }}
            </fieldset>
    	</fieldset>
    	
    	<fieldset class="block">
    	    {{ form_widget(form.introText, {'attr': {'placeholder': 'Intro text'} }) }}
            {{ form_widget(form.text, {'attr': {'placeholder': 'Full text'} }) }}
    	</fieldset>
    	
    	<fieldset class="block">
    	    {{ form_widget(form.location, {'attr': {'placeholder': 'Location'} }) }}
    	</fieldset>
    	
    	<fieldset class="block">
    	    {{ form_widget(form.picture.file, {'attr': {'data-title': 'Select a picture.'} }) }}
    	</fieldset>
    	
    	<fieldset class="block">
    	    {{ form_widget(form.cover.file, {'attr': {'data-title': 'Select a cover.'} }) }}
    	</fieldset>
        
        {{ form_rest(form) }}
        
        <section class="tools">
            <input type="submit" class="buttonLink" />
        </section>
        
    </form>
    
{% endblock %}